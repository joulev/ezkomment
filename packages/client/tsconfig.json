{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "module": "esnext",
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@client/*": ["packages/client/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
