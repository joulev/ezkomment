{
  "name": "@ezkomment/server",
  "private": true,
  "description": "Backend server for ezkomment",
  "scripts": {
    "build": "tsc --project './tsconfig.json'",
    "dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register --rs ./index.ts",
    "start": "npm run build && NODE_ENV=production TS_NODE_BASEURL=./dist node -r tsconfig-paths/register dist/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "firebase": "^9.8.1",
    "firebase-admin": "^10.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.34",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4"
  }
}
