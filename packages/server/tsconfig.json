{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "esModuleInterop": true,
    "module": "commonjs",
    "incremental": true,
    "paths": {
      "@server/*": ["packages/server/*"]
    },
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["**/*.ts", "service-account.json"],
  "exclude": ["node_modules", "dist"]
}
